    "prometheusRule": {
      "description": "# Custom PrometheusRule to be defined\n# ref: https://github.com/coreos/prometheus-operator#customresourcedefinitions",
      "properties": {
        "enabled": {
          "default": false,
          "description": "Enable a PrometheusRule",
          "title": "enabled",
          "type": "boolean"
        },
        "rules": {
          "description": "List of rules",
          "items": {
            "anyOf": [
              {
                "properties": {
                  "alert": {
                    "default": "goldpinger_nodes_unhealthy",
                    "title": "alert",
                    "type": "string"
                  },
                  "annotations": {
                    "properties": {
                      "description": {
                        "default": "Goldpinger instance {{ \"{{ $labels.goldpinger_instance }}\" }} has been reporting unhealthy nodes for at least 5 minutes.\n",
                        "title": "description",
                        "type": "string"
                      },
                      "summary": {
                        "default": "Instance {{ \"{{ $labels.instance }}\" }} down",
                        "title": "summary",
                        "type": "string"
                      }
                    },
                    "required": [
                      "description",
                      "summary"
                    ],
                    "title": "annotations",
                    "type": "object"
                  },
                  "expr": {
                    "default": "sum(goldpinger_nodes_health_total{job=\"{{ template \"goldpinger.fullname\" . }}\", status=\"unhealthy\"})\nBY (instance, goldpinger_instance) \u003e 0\n",
                    "title": "expr",
                    "type": "string"
                  },
                  "for": {
                    "default": "5m",
                    "title": "for",
                    "type": "string"
                  },
                  "labels": {
                    "properties": {
                      "severity": {
                        "default": "warning",
                        "title": "severity",
                        "type": "string"
                      }
                    },
                    "required": [
                      "severity"
                    ],
                    "title": "labels",
                    "type": "object"
                  }
                },
                "required": [
                  "alert",
                  "expr",
                  "for",
                  "annotations",
                  "labels"
                ],
                "type": "object"
              }
            ],
            "required": []
          },
          "title": "rules",
          "type": "array"
        }
      },
      "required": [
        "enabled",
        "rules"
      ],
      "title": "prometheusRule",
      "type": "object"
    },
